        $('#btnSubmit').click(function (e) {
            if ($("#Description").val() === "") {
                alert("Please Enter description");
                this.disabled = false;
            }
            else {
                this.disabled = true;
                $('form')[0].submit();
            }
        });
    </script>*@
}
