@model IEnumerable<NIMBOLE.Models.Models.MilestoneModel>
@using NIMBOLE.UI.Helpers

@{
    ViewBag.Title = "NIMBOLE | List Mile Stones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    <script src="~/assets/js/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/js/pages/base_tables_datatables.js"></script>
}
@using (Html.BeginForm())
{
    <main id="main-container">
        <div class="block">
            <div class="block-header">
                <div class="form-group">
                    <div class="col-xs-6">
                        <h1 class="block">@NIMBOLE.GlobalResources.Resources.Milestone</h1>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-6" style="text-align:right;">
                        <a href="~/Milestone/Create" class="btn btn-sw btn-primary" tabindex="1" role="button"><i class="fa fa-plus"></i>@NIMBOLE.GlobalResources.Resources.New</a>
                    </div>
                </div>
            </div>
            <div class="block-content">
                <table class="table table-bordered table-striped js-dataTable-full-pagination" id="example" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="text-center" style="display:none">@NIMBOLE.GlobalResources.Resources.Id</th>
                            <th class="text-center">@NIMBOLE.GlobalResources.Resources.MilestoneCode</th>
                            <th class="text-center">@NIMBOLE.GlobalResources.Resources.Description</th>
                            <th class="text-center">@NIMBOLE.GlobalResources.Resources.Stage</th>
                            <th class="text-center">@NIMBOLE.GlobalResources.Resources.Status</th>
                            <th class="text-center"></th>
                            <th class="text-center"></th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td style="display:none">
                                        @item.Id
                                    </td>
                                    <td>
                                        @item.Code
                                    </td>
                                    <td>
                                        @item.Description
                                    </td>
                                    <td>
                                        @item.MileStoneStage
                                    </td>
                                    @{

                                if (item.Status == true)
                                {
                                    item.Active = "Active";
                                    item.Change_status = "Deactivate";
                                }
                                else
                                {
                                    item.Active = "Inactive";
                                    item.Change_status = "Activate";
                                }
                                var Id = @item.Id;
                                    }
                                    <td>
                                        @item.Active
                                    </td>
                                    <td>
                                        @*<a href="javascript:ActivateorDeactivate(@item.Id,@item.Status);"> @item.Change_status </a>*@
                                        <a href="javascript:void();" onclick="Editfunction(@item.Id);"> @NIMBOLE.GlobalResources.Resources.Edit </a>
                                    </td>
                                    <td>
                                        <a href="javascript:ActivateorDeactivate(@item.Id,'@item.Active');"> @item.Change_status </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <script>
        function Editfunction(id) {
            window.location.href = window.location.origin + "/Milestone/Edit?q=" + SubmitsEncry(id);
        }
    </script>



    <script type="text/javascript">
        function ActivateorDeactivate(id, status) {
            var message;
            if (status == "Active") {
                message = "Do you want to deactivate ?";
            } else {
                message = "Do you want to activate ?";
            }
            swal(
                {
                    title: message,
                    //text: message,sss
                    type: "",
                    showCancelButton: true,
                    confirmButtonColor: "#337ab7",
                    confirmButtonText: "Ok",
                    cancelButtonText: "Cancel",
                    cancelButtonColor: "#d26a5c",
                    showLoaderOnConfirm	:true,
                    closeOnConfirm: false,
                },
                function () {
                    if (status == "Active") {
                        updateRecord(id, false);//deactivate record
                    }
                    else {
                        updateRecord(id, true);//activate record
                    }
                    //swal("Deleted!", "Your imaginary file has been deleted.", "success");
                });
        }

        //if (status == "Active") {
        //    customalert("Do you want to deactivate?","Dea");
        //        updateRecord(id, false);
        //}
        //else {
        //    var deleteconfirm = confirm("Do you want to activate?");
        //    if (deleteconfirm == true) {
        //        updateRecord(id, true);//activate record
        //    }
        //}
        function updateRecord(id, status) {
            $.ajax({
                url: '/Milestone/Delete',
                dataType: "json",
                type: "DELETE",
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify({ id: id, status: status }),
                async: true,
                processData: false,
                cache: false,
                success: function (data) {
                    location.href = '/Milestone/Index';
                },
                error: function (xhr) {
                }
            });
        }
    </script>

    <script>

    $(document).ready(function () {
        var table = $('#example').DataTable();
        table.destroy();
        $('#example').DataTable({
            "order": [[0, "desc"]]
        });
    });

    </script>

}
